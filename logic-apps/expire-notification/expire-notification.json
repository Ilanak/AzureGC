{
    "$connections": {
        "value": {
            "azurequeues": {
                "connectionId": "/subscriptions/da6d8e3f-688a-4d75-a5f0-412b7a223422/resourceGroups/Management/providers/Microsoft.Web/connections/azurequeues",
                "connectionName": "azurequeues",
                "id": "/subscriptions/da6d8e3f-688a-4d75-a5f0-412b7a223422/providers/Microsoft.Web/locations/westeurope/managedApis/azurequeues"
            },
            "office365": {
                "connectionId": "/subscriptions/da6d8e3f-688a-4d75-a5f0-412b7a223422/resourceGroups/Management/providers/Microsoft.Web/connections/office365",
                "connectionName": "office365",
                "id": "/subscriptions/da6d8e3f-688a-4d75-a5f0-412b7a223422/providers/Microsoft.Web/locations/westeurope/managedApis/office365"
            }
        }
    },
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Delay_until": {
                "inputs": {
                    "until": {
                        "timestamp": "@{adddays(json(triggerBody()['MessageText']).Tags.Expire,parameters('reminderDays'))}"
                    }
                },
                "runAfter": {},
                "type": "Wait"
            },
            "Send_an_email": {
                "inputs": {
                    "body": {
                        "Body": "This is a reminder about a resource you own which is about to expire. <br /> @{triggerBody()['MessageText']} <br /> You can extend your ownership by clicking this link: <br /> <a href=\"@{parameters('extendUrl')}\">@{parameters('extendUrl')}</a>",
                        "Importance": "Normal",
                        "IsHtml": true,
                        "Subject": "Your resource is about to expire",
                        "To": "@{json(triggerBody()['MessageText']).Tags.Owner}"
                    },
                    "host": {
                        "api": {
                            "runtimeUrl": "https://logic-apis-westeurope.azure-apim.net/apim/office365"
                        },
                        "connection": {
                            "name": "@parameters('$connections')['office365']['connectionId']"
                        }
                    },
                    "method": "post",
                    "path": "/Mail"
                },
                "runAfter": {
                    "Delay_until": [
                        "Succeeded"
                    ]
                },
                "type": "ApiConnection"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "parameters": {
            "$connections": {
                "defaultValue": {},
                "type": "Object"
            },
            "extendUrl": {
                "defaultValue": "",
                "type": "string"
            },
            "reminderDays": {
                "defaultValue": -2,
                "type": "int"
            }
        },
        "triggers": {
            "When_there_are_messages_in_a_queue": {
                "inputs": {
                    "host": {
                        "api": {
                            "runtimeUrl": "https://logic-apis-westeurope.azure-apim.net/apim/azurequeues"
                        },
                        "connection": {
                            "name": "@parameters('$connections')['azurequeues']['connectionId']"
                        }
                    },
                    "method": "get",
                    "path": "/@{encodeURIComponent('notifications')}/message_trigger"
                },
                "recurrence": {
                    "frequency": "Minute",
                    "interval": 3
                },
                "splitOn": "@triggerBody()?.QueueMessagesList.QueueMessage",
                "type": "ApiConnection"
            }
        }
    }
}